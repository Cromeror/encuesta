<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.crom.encuesta.view_controller.fragment.OcupadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/que_hace_trabajo"
            android:textAppearance="?android:attr/textAppearanceLarge">

            <requestFocus />
        </TextView>

        <EditText
            android:id="@+id/que_hace_trabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba sus observaciones"
            android:lines="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_empresa_negocio"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/nombre_empresa_negocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba sus observaciones"
            android:lines="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serivios_empresa_dedica"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/serivios_empresa_dedica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba sus observaciones"
            android:lines="4" />

        <TextView
            android:id="@+id/ocupado_4_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiene_contrato"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/ocupado_5_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/contrato_es"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"></Spinner>

        <TextView
            android:id="@+id/ocupado_6_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/contrato_trabajo_es"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"></Spinner>

        <TextView
            android:id="@+id/ocupado_7_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/empresa_que_lo_contrato"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"></Spinner>

        <TextView
            android:id="@+id/ocupado_7a_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/empresa_que_lo_contrato_es"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_7a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"></Spinner>

        <TextView
            android:id="@+id/ocupado_8_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actividad_dela_empresa"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ocupado_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba sus observaciones"
            android:lines="4" />

        <TextView
            android:id="@+id/ocupado_9_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esta_contento_contrato"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ocupado_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba sus observaciones"
            android:lines="4" />

        <TextView
            android:id="@+id/ocupado_10_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/contrato_tiene_derecho"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/ocupado_10_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ocupados_11_a" />

        <CheckBox
            android:id="@+id/ocupado_10_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ocupados_11_b" />

        <CheckBox
            android:id="@+id/ocupado_10_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ocupados_11_c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/tiempo_enla_empresa"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/tiempo_enla_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="4"
                    android:inputType="number" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/trabajo_usted_es"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/ocupado_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"></Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ocupado12a">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:hint="Presione siguiente"
                android:inputType="textPersonName" />
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/otro_btn"
                android:text=">"/>
        </LinearLayout>

        <Button
            android:id="@+id/next_gnrl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_siguente" />
    </LinearLayout>
</ScrollView>