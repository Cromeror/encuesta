<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.crom.encuesta.view_controller.fragment.OcupadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/formas_de_trabajo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <requestFocus/>
        </TextView>

        <Spinner
            android:id="@+id/independientes_24_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/idependientes_24_otro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/l24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/independientes_2_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ha_registrado_el_negocio"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/independientes_25_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/independientes_3_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ultimo_aÃ±o_de_registro"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/independientes_25a_editText"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sino_lo_ha_renovado_escriba_00"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calendar_btn"
                    android:src="@android:drawable/ic_menu_my_calendar"/>
                </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/independientes_4_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganancia_neta_mes"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="valor mensual"
            android:id="@+id/independientes_26_editText"/>

        <TextView
            android:paddingTop="@dimen/paddin_bottom"
            android:id="@+id/independientes_5_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganancia_neta_12_meses"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/independientes_27_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="valor mensual" />

        <TextView
            android:id="@+id/independientes_6_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/este_trabajo_es"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/independientes_28_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/otro_editText_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cual"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/next_gnrl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_siguente" />
    </LinearLayout>
</ScrollView>