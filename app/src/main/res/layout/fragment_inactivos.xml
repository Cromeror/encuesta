<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin"
    tools:context="com.crom.encuesta.view_controller.fragment.InactivosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/trabajado_dos_semanas_consecutivas"
            android:id="@+id/switch_inactivos_1" />

        <LinearLayout
            android:id="@+id/inactivos_saltar1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/trabajo_ultima_vez"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/spiner_inactivos_2"
                android:layout_gravity="center_vertical">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/porque_dejo_trabajo"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/spiner_inactivos_3"
                android:layout_gravity="center_vertical">
            </Spinner>

            <EditText
                android:id="@+id/etext_inactivos_3"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Otro, cual?"
                android:visibility="gone"
                />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/busco_otro_trabajo_o_negocio"
                android:id="@+id/switch_inactivos_4" />


        </LinearLayout>


        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/buscado_trabajo_alguna_vez"
            android:id="@+id/switch_inactivos_5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/cuando_busco_trabajo_ultima_vez"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/spiner_inactivos_6"
            android:layout_gravity="center_vertical">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/razon_dejo_buscar_trabajo"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/spiner_inactivos_7"
            android:layout_gravity="center_vertical">
        </Spinner>

        <EditText
            android:id="@+id/etext_inactivos_7"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Otro, cual?"
            android:visibility="gone"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/esta_afiliados_fondo_actualmente"
            android:id="@+id/switch_inactivos_8" />

        <TextView
            android:id="@+id/txv_inactivos_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fondos_afiliados_actualmente"
            android:visibility="gone"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/spiner_inactivos_9"
            android:layout_gravity="center_vertical">
        </Spinner>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/gano_ingresos_x_trabajo"
            android:id="@+id/switch_inactivos_10" />
        <EditText
            android:id="@+id/etext_inactivos_10"
            android:inputType="number"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Â¿En cuanto estima lo que recibio?"
            android:visibility="gone"
            />

    </LinearLayout>
</ScrollView>
